{
  "name": "hibikilogy",
  "private": "true",
  "scripts": {
    "start": "zola serve",
    "dev": "unocss \"templates/**/*.html\" -o \"static/style/uno.css\" --watch",
    "build": "unocss \"templates/**/*.html\" -o \"static/style/uno.css\" && zola build",
    "lint:md": "markdownlint **/*.md && lint:zh",
    "postinstall": "husky install",
    "commit": "git-cz",
    "up": "taze major -I"
  },
  "devDependencies": {
    "@unocss/cli": "^0.61.0",
    "eslint": "^9.2.0",
    "git-cz": "^4.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.40.0",
    "pnpm": "^9.1.0",
    "stylelint": "^16.5.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "taze": "^0.13.8",
    "unocss": "^0.61.0",
    "zhlint": "^0.8.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,sass,css}": [
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@9.0.2",
  "license": "MIT"
}
